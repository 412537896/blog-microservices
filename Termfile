root:
  ~/Documents/projects/blogs/git/blog-microservices/microservices

commands:
  rabbitMq: ~/Applications/rabbitmq_server-3.4.3/sbin/rabbitmq-server

  auth-server:       cd support/auth-server;                           ./gradlew bootRun
  config-server:     cd support/config-server;                         ./gradlew bootRun
  discovery-server:  cd support/discovery-server;                      ./gradlew bootRun
  monitor-dashboard: cd support/monitor-dashboard;                     ./gradlew bootRun
  edge-server:       sleep 15; cd support/edge-server;                 ./gradlew bootRun
  turbine:           sleep 15; cd support/turbine;                     ./gradlew bootRun

  product:           sleep 30; cd core/product-service;                ./gradlew bootRun
  recommendation:    sleep 30; cd core/recommendation-service;         ./gradlew bootRun
  review:            sleep 30; cd core/review-service;                 ./gradlew bootRun
  product-composite: sleep 30; cd composite/product-composite-service; ./gradlew bootRun
  product-api:       sleep 30; cd api/product-api-service;             ./gradlew bootRun

  webapp:            sleep 10; cd webapp/ui;                           ./gradlew bootRun

layout_type: row

layout:
  - [ rabbitMq, auth-server, config-server, discovery-server ]
  - [ monitor-dashboard, turbine, edge-server ]
  - [ product, recommendation, review, product-composite, product-api ]
  - [ webapp ]
